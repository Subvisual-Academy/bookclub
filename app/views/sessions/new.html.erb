<h1>Log In</h1>
<%= form_with model: @user, url: log_in_path, method: :post do |f|  %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <%= submit_tag 'Log In' %>
<% end %>
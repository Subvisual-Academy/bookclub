<h1>Log In</h1>
<%= form_tag sessions_path, method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= email_field_tag :name, nil, required: true %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <%= submit_tag 'Log In' %>
<% end %>
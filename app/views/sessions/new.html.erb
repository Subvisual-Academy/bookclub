<h1>Log In</h1>
<%= form_with model: @user, url: login_path, method: :post do |f|  %>
  <div class="Users-Field">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div class="Users-Field">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div class="Users-Actions">
    <%= submit_tag 'LOG IN' %>
  </div>
<% end %>

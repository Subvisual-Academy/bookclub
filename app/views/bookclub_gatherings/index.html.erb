<table class="Table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Special Presentation</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @bookclub_gatherings.each do |gathering| %>
    <tr>
      <td><%= gathering.date %></td>
      <td><%= gathering.special_presentation %></td>
      <td><%= link_to 'Show', gathering %></td>
      <% if current_user %>
        <td><%= link_to 'Edit', edit_bookclub_gathering_path(gathering) %></td>
        <td><%= link_to 'Delete', gathering, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Gathering', new_bookclub_gathering_path %>
<% end %>

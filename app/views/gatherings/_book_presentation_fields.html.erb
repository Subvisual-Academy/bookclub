<div class='nested-fields'>
  <div class='form-group'>
    <%= form.hidden_field :_destroy %>
    
    <div class="Gatherings-mentionsFirst">
    <%= form.select :user_id, User.order(:name).all.map {|u| [u.name,u.id]}, {:prompt => "User"} , {:class => "SlimSelect"} %>
    </div>
    &nbsp; - &nbsp;
    <div class="Gatherings-mentionsSecond">
    <%= form.select :book_id, Book.order(:title).all.map {|b| [b.title, b.id]}, {:prompt => "Book"} , {:class => "SlimSelect"} %>
    </div>
    &nbsp; &nbsp;
    <%= form.check_box :special, class: "checkbox-round" %>
    &nbsp;
    <%= link_to (inline_svg_tag 'trash.svg', alt: "delete"), "#", data: { action: "click->nested-form#removeAssociation" }, class:"u-deleteButton" %>
  </div>
</div>

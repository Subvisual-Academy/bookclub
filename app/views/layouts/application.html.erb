<!DOCTYPE html>
<html>
  <head>
    <title>Bookclub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <style>
        /*@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&display=swap');*/
        /*@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap');*/
        /*@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap');*/
    </style>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header class="main-header">
      <div class="container">
        <nav class="header-nav">
          <div class="bookclub-brand">
            <%= link_to 'BookClub', root_path %>
          </div>
        </nav>
        <nav class="header-nav">
          <ul>
            <li>
              <div class="nav-link">
                <%= link_to (image_tag 'books.svg', alt: "Icon of a book") +'Books', books_path %>
              </div>
            </li>
            <li>
              <div class="nav-link">
                <%= link_to (image_tag 'gatherings.svg', alt: "Icon of a list") + 'Gatherings', gatherings_path  %>
              </div>
            </li>
            <li>
              <div class="login-btn">
                <% if current_user %>
                  <%= link_to (image_tag 'user.svg', alt: "Icon of an user")+'Log Out', logout_path, method: :delete %>
                <% else %>
                  <%= link_to (image_tag 'user.svg', alt: "Icon of an user")+'Log In', login_path %>
                <% end %>
              </div>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <div>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
    </div>

    <div class="main-body">
      <%= yield %>
    </div>
  </body>
</html>

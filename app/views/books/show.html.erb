<p>
  <strong>Image:</strong>
  <% if @book.image.blank?%>
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d2/Question_mark.svg/585px-Question_mark.svg.png"  alt="unknown book cover"/>
  <% else %>
    <img src="<%= @book.image %>"  alt="book cover"/>
  <% end %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong> Author: </strong>
  <% if @book.author.blank? %>
     Unavailable
  <% else %>
    <%= @book.author %>
  <% end %>
</p>

<p>
  <strong>Synopsis:</strong>
  <% if @book.synopsis.blank? %>
    Unavailable
  <% else %>
    <%= @book.synopsis %>
  <% end %>
</p>


<p> Presented by :</p>

<ul>
  <% @book.users.each do |user| %>
    <li>
      <div><%= user.name %></div>
    </li>
  <% end %>
</ul>

<%= link_to 'Back', books_path %>

<% if current_user %>
  | <%= link_to 'Edit', edit_book_path(@book) %>
  | <%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
